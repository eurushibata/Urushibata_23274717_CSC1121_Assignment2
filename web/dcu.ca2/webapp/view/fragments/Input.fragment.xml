<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:f="sap.ui.layout.form">
  	<VBox>
		<f:SimpleForm 
    editable="true"
			layout="ResponsiveGridLayout"
			labelSpanXL="12"
			labelSpanL="12"
			labelSpanM="12"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="0"
			emptySpanL="0"
			emptySpanM="0"
			emptySpanS="0"
			columnsXL="1"
			columnsL="1"
			columnsM="1"
			singleContainerFullSize="false">
			<f:content>
				<Label text="Search keywords" />
				<Input id="search_text" value="123" />
				<Button type="Emphasized" text="Search" width="5rem" press=".onSearchPress"></Button>
				<Label text="Search Algorithm" />
				<SegmentedButton id="search_algorithm" selectedKey="bm25" class="sapUiSmallMarginBottom">
					<items>
						<SegmentedButtonItem text="VSM" key="vsm" />
						<SegmentedButtonItem text="BM25" key="bm25" />
					</items>
				</SegmentedButton>
			</f:content>
		</f:SimpleForm>
	</VBox>
</core:FragmentDefinition>