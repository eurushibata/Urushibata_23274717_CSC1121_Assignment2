<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	xmlns:uxap="sap.uxap"
	xmlns:core="sap.ui.core">
	<uxap:ObjectPageSection showTitle="false" visible="{= !${/selectedPurchase} }">
		<uxap:subSections>
			<uxap:ObjectPageSubSection class="sapUxAPObjectPageSubSectionFitContainer">
				<IllustratedMessage
					visible="{= ${/total} === 0}"
					illustrationType="{= ${/inputPopulated} ? 'sapIllus-ErrorScreen' : 'sapIllus-SearchFolder' }"
					title="No Results"
					description="No images were found with your search criteria"/>
				<VBox visible="{= ${/total} > 0}">
					<Text text="{/timeSpent}" />
					<Text text="records found matching the search criteria: {/total}" />
					<List
						growing="true"
						growingThreshold="10"
						headerText="Products {= ${/results}.length }"
						items="{/results}" >
						<StandardListItem
							title="{title}"
							description="{content}"
							icon="/images/{image_name}"
							custom:url="{
								key: 'image',
								value: '{wikipedia_source_url}'
							}"
							press=".onImagePress"
							iconDensityAware="false"
							iconInset="false"
							type="Navigation" />
					</List>
			</VBox>
			</uxap:ObjectPageSubSection>
		</uxap:subSections>
	</uxap:ObjectPageSection>
</core:FragmentDefinition>